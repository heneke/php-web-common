<phpunit>
    <testsuites>
        <testsuite name="UnitTests">
            <directory>./test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
        <blacklist>
            <directory>./vendor</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-html" target="./reports/coverage" />
    </logging>
</phpunit>